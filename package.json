{
  "name": "dazaar-vision",
  "version": "0.0.1",
  "description": "Live stream video/audio over Dazaar",
  "main": "electron-main.js",
  "title": "Dazaar Vision",
  "browserify": {
    "transform": [
      "hui/css",
      "hui/html"
    ]
  },
  "build": {
    "copyright": "Â© 2019, Bitfinex",
    "artifactName": "${productName}.${ext}",
    "appId": "com.bitfinex.dazaarvision",
    "productName": "Dazaar Vision",
    "mac": {
      "category": "public.app-category.business",
      "target": "dir"
    },
    "linux": {
      "target": "AppImage",
      "category": "Office"
    },
    "files": [
      "lib/**",
      "global.css",
      "components/**",
      "assets/**",
      "index.js",
      "index.bundle.js",
      "electron.js",
      "electron-main.js",
      "index.html"
    ]
  },
  "dependencies": {
    "@hyperswarm/replicator": "^1.7.0",
    "@mafintosh/search-component": "^1.0.1",
    "dazaar": "github:bitfinexcom/dazaar",
    "dazaar-payment": "github:bitfinexcom/dazaar-payment",
    "dazaar-scatter-pay": "github:bitfinexcom/dazaar-scatter-pay",
    "hui": "^1.2.5",
    "hypercore": "^8.2.5",
    "hypercore-crypto": "^1.0.0",
    "hyperindex": "^1.0.1",
    "media-recorder-stream": "^2.1.1",
    "nanoiterator": "^1.2.1",
    "prettier-bytes": "^1.0.4",
    "pretty-ms": "^5.0.0",
    "pump": "^3.0.0",
    "webm-cluster-stream": "^1.0.0"
  },
  "devDependencies": {
    "browserify": "^16.5.0",
    "electron-builder": "^21.2.0",
    "electron": "^4.2.12",
    "nanotron": "^2.2.0",
    "vhs-tape": "^3.2.0"
  },
  "scripts": {
    "debug": "nanotron -e memcpy -e encoding index.js",
    "build": "browserify -u memcpy -u encoding index.js -u electron --node > index.bundle.js",
    "dist": "npm run build && electron-builder --publish=never",
    "start": "electron electron-main.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bitfinexcom/dazaar-vision.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bitfinexcom/dazaar-vision/issues"
  },
  "homepage": "https://github.com/bitfinexcom/dazaar-vision"
}
